mixin pagination(pagination)
    nav(aria-label='Page navigation example')
        ul.pagination
            if pagination.currentPage>1
                li(class="page-item" button-pagination=`${pagination.currentPage-1}`)
                    button.page-link Trang trước 
            -for(var i=1;i<=pagination.totalPage;i++)
                li(class=`page-item ${i == pagination.currentPage?"active":""}` button-pagination=i)
                    button.page-link #{i}
            if pagination.currentPage<pagination.totalPage
                li(class="page-item" button-pagination=`${pagination.currentPage+1}`)
                    button.page-link.page-next Trang sau